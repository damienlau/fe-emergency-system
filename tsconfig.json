{
  "compilerOptions": {
    "baseUrl": "./website",
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "lib": ["dom", "esnext"],
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "sourceMap": true,
    "strict": true,
    "types": ["node", "vite/client"],
    "target": "esnext"
  },
  "include": ["website/**/*"]
}
